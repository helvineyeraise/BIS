@model Bis.Models.Charge

@{
    ViewBag.Title = "Details";
}


<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="card">
                <div class="card-header header-elements-inline">
                    <h5 class="card-title">Details Charge</h5>
                    <div class="header-elements">
                        <div class="list-icons">
                            
                            @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })
                            @Html.ActionLink("Edit", "Edit", new { id = Model.id }, new { @class = "btn btn-success" })
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-lg-2 font-weight-bold">Company Name</label>:
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.Company.companyName)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-2 font-weight-bold">Name</label>:
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.Location.name)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-2 font-weight-bold">Employee Stay Charge</label>:
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.companyStayCharge)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-2 font-weight-bold">Employee Visit Charge</label>:
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.employeeVisitCharge)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-2 font-weight-bold">Company Stay Charge</label>:
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.companyStayCharge)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-2 font-weight-bold">Company Visit Charge</label>:
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.companyVisitCharge)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-2 font-weight-bold">Employee Claim Charge</label>:
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.employeeClaimCharge)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-2 font-weight-bold">Company Claim Charge</label>:
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.companyClaimCharge)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-2 font-weight-bold">Remarks</label>:
                        <div class="col-lg-9">
                            @Html.DisplayFor(model => model.remark)
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



