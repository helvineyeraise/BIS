                            <dd>
                                @Html.DisplayFor(model => model.vendorCode)
                            </dd>

                            <dt>
                                <label>State</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.state)
                            </dd>

                            <dt>
                                <label>City</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.city)
                            </dd>

                            <dt>
                                <label>Name</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.companyDetails)
                            </dd>

                        </dl>
                    </div>
                 
                </div>
            </div>
        }
    </div>
