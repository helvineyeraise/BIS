                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.companyCategoryId)
                            </dd>

                            <dt>
                                <label>Phone NO</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.phoneNo)
                            </dd>

                            <dt>
                                <label>Company Description</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.companyDescription)
                            </dd>

                            <dt>
                                <label>Company Address</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.companyAddress)
                            </dd>

                            <dt>
                                <label>Email</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.email)
                            </dd>

                            <dt>
                                <label>GSTIN</label>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.gSTIN)
                            </dd>

                            <dt>
